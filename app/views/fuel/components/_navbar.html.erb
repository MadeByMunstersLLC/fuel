<aside class="navbar" role="navigation" aria-label="">
  <div class="navbar-logo">
    <%= image_tag Fuel.configuration.logo, alt: 'Fuel' %>
  </div>
  <nav class="navbar-navigation">
    <ul>
      <%= link_to fuel.admin_posts_path do %>
        <li class="navbar-link">
          <%= image_tag("fuel/icons/post-icon.svg", class: "navbar-link-icon") %> Posts
        </li>
      <% end %>
      <%= link_to fuel.admin_authors_path do %>
        <li class="navbar-link">
          <%= image_tag("fuel/icons/user-icon.svg", class: "navbar-link-icon") %> Authors
        </li>
      <% end %>
      <%= link_to fuel.admin_categories_path do %>
        <li class="navbar-link">
          <%= image_tag("fuel/icons/cat-icon.svg", class: "navbar-link-icon") %> Cats
        </li>
      <% end %>
      <%= link_to fuel.admin_tags_path do %>
        <li class="navbar-link">
          <%= image_tag("fuel/icons/tag-icon.svg", class: "navbar-link-icon") %> Tags
        </li>
      <% end %>
    </ul>
  </nav>
</aside>